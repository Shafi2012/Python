# Impor necessary modules
import random
import time

# Pick a number between 1 to 100
number=random.randint(1, 100)

def intro():
    print("What is your name")
# declaring name variable globalso it can be accessed outside the function
    global Name
    name = input()
    print(name + " we are going to play a game. I am thinking of a number betwwen 1 and 100")
    if(number%2==0):
     x='even'
    else:
     x='odd'
    print("\nThis is an {}number".format(x))
    time.sleep(2.5)
    print("Go ahead. Guess!")
def pick():
    guessesTaken = 0

# If the nuber of guesses is less than 6
    while guessesTaken < 6:
      time.sleep(2.0)
#Insert the place to enter guess
      enter=input("Guess: ")
#Check if a number was entered
      try:

#stores the guess as an integer instead of a string
       guess = int(enter)
       if guess<=100 and guess>=1: #If they are in range
         guessesTaken=guessesTaken+1 # adds one guess each time
         if guessesTaken<6:
            if guess<number:
              print('The guess of the number that you have entered is too low')
            if guess>number:
              print('The guess of the number that you have entered is too high') 
            if guess != number:
              time.sleep(2.5)
              print("Try again")

#If the guess is right
            if guess==number:
              break
       if guess>100 or guess<1:
         print("Dumb that number isn't in the range")
         time.sleep(2.0)
         print("Please enter a number between 1 and 100")

      except:
        print("Your number is incorrect")
    if guess == number:
        guessesTaken = str(guessesTaken)   
        print("Thats Correct! You guessed my number in {} guesses!".format[name,guessesTaken]) 
    if guess != number:
      print('Nope the number i was thinking was '+str(number))
playagain="yes"
while playagain=="yes":
  intro()
  pick()
  print("Do you want to play again?")
  playagain=input() 

         
      

